       '(
         (("ka") ("nn" "n" "q") ("ji" "zi") ("he") ("nn" "n" "q") ("ka") ("nn" "n" "q"))
         (("kz" "kn") ("ji" "zi") ("hd") ("kz" "kn")))
       (gen-hiragana->roman-pattens "かんじへんかん"))
